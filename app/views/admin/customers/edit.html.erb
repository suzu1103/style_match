<h2><%= @customer.name %>さんの会員情報編集</h2>
<div class = "row">
  <div class = "col-md-12">
    <%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">会員ID</label>
          <%= @customer.id %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">ユーザー名</label>
          <%= f.text_field :user_name %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">氏名</label>
          <%= f.text_field :name %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">メールアドレス</label>
          <%= f.text_field :email %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">自己紹介</label>
          <%= f.text_area :introduction %>
      </div>

      <div class="form-group col-xs-9 ml-5">
        <label class = "col-sm-4">会員ステータス</label>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, '退会', value: true %>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, '有効', value: false %>
      </div>

      <div class = "actions text-center">
        <%= f.submit '変更する' %>
      </div>
    <% end %>
  </div>
</div>
