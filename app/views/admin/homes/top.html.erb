<div class = "row">
  <div class = "center-block col-md-10 mt-3">
    <h2>会員一覧</h2>
      <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">登録日時</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
              <td><%= customer.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
              <td>
                <% if customer.is_deleted == true %>
                  退会
                <% else %>
                  有効
                <% end %>
              </td>
            </tr>
           <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
  </div>
</div>