<h2>プロフィール編集</h2>
<%= form_with model: @customer, url: customer_path, method: :patch, local: true do |f| %>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

    <div class="field">
        <label class = "col-md-4">氏名</label>
        <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
        <label class = "col-md-4">ユーザーネーム</label>
        <%= f.text_field :user_name %>
    </div>
    <div class="field">
        <label class = "col-md-4">自己紹介</label>
        <%= f.text_area :introduction %>
    </div>

    <%= f.submit "変更する", class:"btn btn-sm btn-info" %>

<% end %>