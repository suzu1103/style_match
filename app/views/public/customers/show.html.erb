<div>
    <h2><%= @customer.user_name %></h2>
    <%= image_tag @customer.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
    <% if @customer == current_customer %>
     <p><%= link_to "プロフィール編集", edit_customer_path(@customer) %></p>
    <% end %>

    <p><%= "フォロー #{@customer.follower.count}" %> | <%= "フォロワー #{@customer.followed.count}" %></p>
    <p></p>
    <% unless @customer == current_customer %>
      <% if current_customer.following?(@customer) %>
        <%= link_to 'フォロー中', customer_unfollow_path(@customer.id), method: :POST %>
      <% else %>
        <%= link_to 'フォローする', customer_follow_path(@customer.id), method: :POST %>
      <% end %>
    <% end %>

    <%= @customer.introduction %>
</div>

<!--投稿者の投稿一覧-->
<div class = "row">
  <% @posts.each do |post_image| %>
    <div class="card-deck">
      <div class="card" style = "width:250px">

          <%= link_to post_path(post_image.id) do %>
            <%= image_tag post_image.get_image, width: '50', height: 'auto', class:"card-img-top"; %>
          <% end %>
          <div class="card-body">
            <p class="card-text"><%= post_image.introduction %></p>
            <p><%= post_image.updated_at.strftime('%Y/%m/%d %H:%M') %></p>
          </div>

      </div>
    </div>
  <% end %>
</div>