<div class = "row">
  <div class = "col-10">
    <h2>投稿編集</h2>
    <% if @post.errors.any? %>
      <%= @post.errors.count %>件のエラーが発生しました
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <!--下記URLでcreate(POST)のURLを指定する。-->
    <%= form_with model: @post, url:post_path(@post.id), method: :patch do |f| %>
      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <h4>説明</h4>
      <%= f.text_area :introduction %>
      <h4>タグ</h4>
      <%= f.text_field :post_tag_names, value: @tag_list, placeholder: ",で区切ってください" %>



      <%= f.submit '投稿' %>
    <% end %>

  </div>
</div>