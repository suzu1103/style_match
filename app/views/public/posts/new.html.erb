<div class = "row">
  <div class = "col-10">
    <h2>新規投稿フォーム</h2>
    <% if @posts.errors.any? %>
      <%= @posts.errors.count %>件のエラーが発生しました
      <ul>
        <% @posts.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <!--下記URLでcreate(POST)のURLを指定する。-->
    <%= form_with model: @posts, url:posts_path, method: :post do |f| %>
      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <h4>説明</h4>
      <%= f.text_area :introduction %>


      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>