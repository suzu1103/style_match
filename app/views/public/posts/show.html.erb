<h1>投稿詳細</h1>

  <div class="card w-75 mx-auto mt-4 shadow-lg">
    <%= image_tag @post.get_image, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
           <%= image_tag @post.customer.get_profile_image(100,100), class:"mt-3 rounded-circle";  %>
        </div>
        <div class="col-10">
          <p class="card-title">説明：<%= @post.introduction %></p>
          <span><i class="fas fa-user"></i> By <%= @post.customer.name %> ｜ </span>
          <span><i class="fa fa-calendar"></i> <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %> ｜ </span>
          <span><i class="fa fa-comment"></i> <%= link_to "#{@post.comments.count}", class:"text-dark" %> ｜ </span>
          <!--% if @post.favorited_by?(current_customer) %>-->
          <!--  <span>-->
          <!--    %= link_to(post_image_favorites_path(@post), class:"text-dark", method: :delete) do %>-->
          <!--      <i class="fa fa-heart" aria-hidden="true"></i> %= @post.favorites.count %>-->
          <!--    % end %>-->
          <!--  </span>-->
          <!--  % else %>-->
          <!--  <span>-->
          <!--    %= link_to(post_image_favorites_path(@post), class:"text-dark", method: :post) do %>-->
          <!--      <i class="fa fa-heart" aria-hidden="true"></i> %= @post.favorites.count %>-->
          <!--    % end %>-->
          <!--  </span>-->
          <!--% end %>-->
          <% if @post.customer == current_user %>
            <span> ｜ </span><%= link_to "削除", post_path(@post), class:"text-dark", method: :delete %>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="comments card-text">
        <h4 class="mt-3"><%= @post.comments.count %>件コメント</h4>
        <% @post.comments.each do |comment| %>
          <div class="media border mb-3">
            <%= image_tag post.comment.customer.get_profile_image('60x60'), class:"bd-placeholder-img align-self-center mx-3";  %>
            <div class="media-body ml-4 p-3">
              <p><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></p>
              <p><%= comment.comment %></p>
              <% if comment.customer == current_customer %>
                <%= link_to "削除", post_comment_path(comment.image, comment), method: :delete, class: "btn btn-danger pull-right" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <hr>
      <div class="new-comment card-text">
        <%= form_with(model:[@post, @comment]) do |f| %>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">コメントする</label>
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
          </div>
          <%= f.submit "送信する", class:"btn btn-lg btn-info mt-2 float-right" %>
        <% end %>
      </div>
    </div>
  </div>